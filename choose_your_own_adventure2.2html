    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
            overflow: hidden;
            position: relative;
        }

        @keyframes shine {
            from {
                text-shadow: 0 0 5px #00ff00;
            }

            to {
                text-shadow: 0 0 20px #00ff00;
            }
        }

        h1 {
            text-align: center;
        }

        .container {
            max-width: 600px;
            text-align: center;
            background-color: rgba(51, 51, 51, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            position: relative;
            z-index: 1;
        }

        .page {
            display: none;
        }

        .page.active {
            display: block;
        }

        .button {
            display: inline-block;
            margin: 10px;
            padding: 15px 30px;
            color: #fff;
            background-color: #5271ff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
            user-select: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
        }

        .button:hover {
            background-color: #9b9b9b;
        }

        .button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300%;
            height: 300%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.5) 20%, transparent 70%);
            transform: translate(-100%, -100%) scale(0.1);
        }

        .button:hover::before {
            transform: translate(-100%, -100%) scale(1);
        }

        .button::after {
            content: '';
            position: absolute;
            top: 0;
            left: -75%;
            width: 50%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
            transform: skewX(-30deg);
            transition: left 0.5s ease;
        }

        .button:hover::after {
            left: 100%;
        }

        @media (max-width: 600px) {
            .button {
                padding: 10px 20px;
                font-size: 14px;
            }
        }

        .stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .star {
            position: absolute;
            background-color: white;
            border-radius: 50%;
            opacity: 0.8;
            animation: moveStar linear infinite;
        }

        @keyframes moveStar {
            from {
                transform: translate(0, 0);
            }

            to {
                transform: translate(var(--x), var(--y));
            }
        }

        #health-container {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #fff;
        }

        .health {
            display: inline-block;
            margin-left: 10px;
            transition: transform 0.3s ease;
        }

        .health.increase {
            animation: healthIncrease 0.4s cubic-bezier(0.075, 0.82, 0.165, 1);
        }

        .health.decrease {
            animation: healthDecrease 0.4s cubic-bezier(0.075, 0.82, 0.165, 1);
        }

        @keyframes healthIncrease {
            0% {
                transform: scale(1);
                color: #fff;
            }

            50% {
                transform: scale(2.5);
                color: #00ff00;
            }

            100% {
                transform: scale(1);
                color: #fff;
            }
        }

        @keyframes healthDecrease {
            0% {
                transform: scale(1);
                color: #fff;
            }

            50% {
                transform: scale(0.7);
                color: #ff0000;
            }

            100% {
                transform: scale(1);
                color: #fff;
            }
        }

        .info-icon {
            font-size: 0.6em;
            vertical-align: super;
            cursor: help;
            position: relative;
            top: -5px;
            right: -5px;
        }

        .info-icon:hover::after {
            content: attr(data-info);
            position: absolute;
            top: 100%;
            right: 0;
            background: #ff6c6c;
            color: #2c2323;
            padding: 5px;
            border-radius: 3px;
            font-size: 14px;
            z-index: 1;
            /* max-width: 200px; */
            text-align: center;

            #loading {
                display: inline-block;
                width: 50px;
                height: 50px;
                border: 3px solid rgba(255, 255, 255, .3);
                border-radius: 50%;
                border-top-color: #fff;
                animation: spin 1s ease-in-out infinite;
                -webkit-animation: spin 1s ease-in-out infinite;
            }

            @keyframes spin {
                to {
                    -webkit-transform: rotate(360deg);
                }
            }

            @-webkit-keyframes spin {
                to {
                    -webkit-transform: rotate(360deg);
                }
            }
        }
    </style>

    <script>

        function createStars() {
            const starContainer = document.createElement('div');
            starContainer.className = 'stars';
            document.body.appendChild(starContainer);

            for (let i = 0; i < 150; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                const size = Math.random() * 3 + 1;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = '50%';
                star.style.top = '50%';

                const duration = Math.random() * 5 + 50 / size;
                star.style.animationDuration = `${duration}s`;

                const x = (Math.random() - 0.5) * window.innerWidth * 6;
                const y = (Math.random() - 0.5) * window.innerHeight * 6;
                star.style.setProperty('--x', `${x}px`);
                star.style.setProperty('--y', `${y}px`);

                const delay = Math.random() * duration;
                star.style.animationDelay = `-${delay}s`;

                starContainer.appendChild(star);
            }
        }

        window.onload = () => {

            createStars();
            updateHealth();
        };

        let health = 4;

